# CropGPT Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# Database Configuration
DB_PASSWORD=secure_password_change_in_production
POSTGRES_PASSWORD=secure_password_change_in_production
REDIS_PASSWORD=redis_password_change_in_production

# Admin Tools (Optional)
PGADMIN_EMAIL=admin@cropgpt.local
PGADMIN_PASSWORD=admin_password_change_in_production

# API Keys (Get these from respective services)
OPENWEATHER_API_KEY=your_openweather_api_key
AGMARKNET_API_KEY=your_agmarknet_api_key
DIGITAL_INDIA_API_KEY=your_digital_india_api_key

# LLM Configuration
HUGGINGFACE_TOKEN=your_huggingface_token

# External URLs
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:8000

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Cache Settings
REDIS_CACHE_TTL=3600
CACHE_DURATION_PRICES=1800
CACHE_DURATION_WEATHER=900
CACHE_DURATION_SCHEMES=86400

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Supported Languages
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi

# Jharkhand Coordinates
RANCHI_LATITUDE=23.3441
RANCHI_LONGITUDE=85.3096